@using WebApp.VendingMachine
@model Drink

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Подробно @Model.Title</title>
</head>
<body>
    @{
        <div>
            <h4>@Model.Title</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Цена:
                </dt>
                <dd class="col-sm-10">
                    @Model.Price
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                    Количество:
                </dt>
                <dd class="col-sm-10">
                    @Model.Count
                </dd>
            </dl>
            <dl class="row">
                <dt class="col-sm-2">
                </dt>
                <dd class="col-sm-10">
                    <img style=" width:75px;height:auto" src="@Url.Content(Model.ImageUrl)" alt="@Url.Content(Model.ImageUrl)" />
                </dd>
            </dl>
        </div>
    <div>
        <a asp-action="Edit" asp-controller="Admin" asp-route-id="@Model.ItemId">Редактировать</a> |
        <a asp-action="Index">Отмена</a>
    </div>
    }
</body>
</html>
